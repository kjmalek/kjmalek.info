---
import site from "../site.config.json";
import { Icon } from "astro-icon";
---

<span class="text-4xl font-bold bg-gray-300 rounded py-2 px-4 shadow-2xl"
  ><a class="hover:underline hover:text-emerald-700" href="/">{site.title}</a
  ></span
>
<nav class="pt-2 shadow-2xl">
  <ul
    class="xl:text-xl flex flex-row gap-4 lg:justify-end items-center bg-gray-300 pl-2 rounded"
  >
    {
      site.navigation.map((navItem) => (
        <li>
          <a class="hover:text-emerald-700 hover:underline" href={navItem.link}>
            {navItem.name}
          </a>
        </li>
      ))
    }
    <li>
      <a
        class="hover:text-emerald-700 block p-2 border-2 rounded border-transparent hover:border-emerald-700"
        href="https://www.linkedin.com/in/kellen-malek-5552a8115/"
        target="_blank"
        title="LinkedIn"
      >
        <Icon name="bi:linkedin" title="linkedin" width="24" />
        <span class="sr-only">LinkedIn</span>
      </a>
    </li>
    <li>
      <a
        class="hover:text-emerald-700 block p-2 border-2 rounded border-transparent hover:border-emerald-700"
        href="https://github.com/kjmalek"
        target="_blank"
        title="Github"
      >
        <Icon name="akar-icons:github-fill" title="github" width="24" />
        <span class="sr-only">Github</span>
      </a>
    </li>
    <li>
      <a
        class="hover:text-emerald-700 block p-2 border-2 rounded border-transparent hover:border-emerald-700"
        href="mailto:me@kjmalek.info"
        title="Mail"
      >
        <Icon name="bytesize:mail" title="mail" width="24" />
      </a>
      <span class="sr-only">Mail</span>
    </li>
  </ul>
</nav>
