---
import BaseHead from "../components/BaseHead.astro";
import BaseHeader from "../components/BaseHeader.astro";
import site from "../site.config.json";

const { content } = Astro.props;

const meta = {
  title: content.title,
  description: content.description,
  imageSrc: content.imageSrc,
  imageType: content.imageType,
  imageAlt: content.imageAlt,
  imageWidth: content.imageWidth,
  imageHeight: content.imageHeight,
};
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead {...meta} />
  </head>
  <body
    class="min-h-screen flex flex-col justify-stretch bg-emerald-50 max-w-screen-2xl mx-auto"
  >
    <header
      class="2xl:px-80 lg:px-40 py-6 flex lg:flex-row flex-col lg:items-end items-center lg:justify-between border-b-4"
    >
      <BaseHeader />
    </header>
    <main
      class="grow mx-auto max-w-full xl:px-80 lg:px-60 sm:px-20 px-4 lg:py-16 py-8 prose text-xl prose-a:font-bold"
    >
      <slot />
    </main>
    <footer class="max-w-full text-center text-xl py-4 border-t-4">
      <span class="bg-gray-300 p-2 rounded shadow-2xl"
        >&#xA9; 2023 {site.author}</span
      >
    </footer>
  </body>
</html>
